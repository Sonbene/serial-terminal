<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Phần content chính -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- AppBar / Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:menu="@menu/navigationview_menu"/>

        <!-- Dãy nút preset M1…M7 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/preset_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Ví dụ 7 nút, bạn có thể generate động bằng code -->
                <Button
                    android:id="@+id/btn_m1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginEnd="4dp"
                    android:text="M1" />

                <Button
                    android:id="@+id/btn_m2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginEnd="4dp"
                    android:text="M2" />

                <Button
                    android:id="@+id/btn_m3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginEnd="4dp"
                    android:text="M3" />

                <Button
                    android:id="@+id/btn_m4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginEnd="4dp"
                    android:text="M4" />

                <Button
                    android:id="@+id/btn_m5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginEnd="4dp"
                    android:text="M5" />

                <Button
                    android:id="@+id/btn_m6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginEnd="4dp"
                    android:text="M6" />
                <!-- … tương tự M3, M4, M5, M6, M7 -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Container để hiển thị ô chỉnh sửa nội dung preset -->
        <FrameLayout
            android:id="@+id/preset_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"/>
        <!-- Khi bấm M1…M7, inflate một layout con vào đây để edit -->

        <!-- Thanh nhập tin nhắn -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_btn_speak_now"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Record"/>

            <EditText
                android:id="@+id/et_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nhập tin nhắn..."
                android:padding="8dp"/>

            <ImageButton
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Send"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigationview_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
