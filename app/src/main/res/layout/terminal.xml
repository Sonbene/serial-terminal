<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Phần content chính -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- AppBar / Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_800"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <!-- 1. RecyclerView hiển thị lịch sử tin nhắn đã gửi -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_messages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:clipToPadding="false"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/preset_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 7 nút 75×50dp vuông góc, text canh giữa -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m1"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="4dp"
                    android:text="M1"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="0dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m2"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="4dp"
                    android:text="M2"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="0dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m3"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="4dp"
                    android:text="M3"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="0dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m4"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="4dp"
                    android:text="M4"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="0dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m5"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="4dp"
                    android:text="M5"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="0dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m6"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="4dp"
                    android:text="M6"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="0dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_m7"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:text="M7"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="0dp"
                    app:strokeWidth="0dp" />
            </LinearLayout>
        </HorizontalScrollView>


        <!-- Container để hiển thị ô chỉnh sửa nội dung preset -->
        <!-- Khi bấm M1…M7, inflate một layout con vào đây để edit -->

        <!-- Thanh nhập tin nhắn -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_btn_speak_now"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Record"/>

            <EditText
                android:id="@+id/et_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nhập tin nhắn..."
                android:padding="8dp"/>

            <ImageButton
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Send"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigationview_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
